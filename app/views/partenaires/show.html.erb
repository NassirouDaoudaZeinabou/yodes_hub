                                <span>üìß Envoyer un email</span>
                            <% end %>
                            <%= link_to "tel:#{@partenaire.phone}", class: "btn btn-secondary" do %>
                                <span>üìû Appeler</span>
                            <% end %>
                        </div>
                    </div>
                </div>

                <!-- Additional Info -->
                <div class="additional-info">
                    <div class="info-grid">
                        <div class="info-card">
                            <div class="info-card-title">Depuis</div>
                            <div class="info-card-value"><%= @partenaire.created_at.strftime("%b %Y") %></div>
                        </div>
                        <div class="info-card">
                            <div class="info-card-title">Statut</div>
                            <div class="info-card-value">‚úì Actif</div>
                        </div>
                        <div class="info-card">
                            <div class="info-card-title">Cat√©gorie</div>
                            <div class="info-card-value">Partenaire</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

   
</body>
</html>
