<style>
/* ============================================
           CANDIDATES PAGE STYLES - ENHANCED
============================================ */
:root {
    /* Palette de jaune fonc√© sophistiqu√©e */
    --gold-primary: #D4AF37;
    --gold-dark: #B8941F;
    --gold-darker: #9A7810;
    --gold-light: #E8C547;
    --gold-pale: #F5E6C8;
    
    /* Compl√©mentaires */
    --charcoal: #2C2C2C;
    --slate: #3A3A3A;
    --gray-warm: #4A4A4A;
    --gray-medium: #666666;
    --gray-light: #E8E8E8;
    --gray-50: #F9FAFB;
    --gray-100: #F3F4F6;
    --gray-200: #E5E7EB;
    --gray-300: #D1D5DB;
    --gray-600: #4B5563;
    --gray-900: #111827;
    --cream: #FAF7F0;
    --white: #FFFFFF;
    
    /* Ombres sophistiqu√©es */
    --shadow-xs: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
    --shadow-sm: 0 1px 3px 0 rgba(0, 0, 0, 0.08);
    --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.08);
    --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.12);
    --shadow-xl: 0 20px 25px -5px rgba(0, 0, 0, 0.1);
    --shadow-gold-sm: 0 2px 12px rgba(212, 175, 55, 0.15);
    --shadow-gold-md: 0 4px 24px rgba(212, 175, 55, 0.25);
    --shadow-gold-lg: 0 8px 40px rgba(212, 175, 55, 0.35);
    --shadow-dark: 0 4px 16px rgba(44, 44, 44, 0.12);
    --glow-gold: 0 0 25px rgba(212, 175, 55, 0.3);
    
    /* Transitions */
    --transition-smooth: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    --transition-fast: all 0.25s ease;
}

/* ============================================
           ANIMATED BACKGROUND
============================================ */
body::before {
    content: '';
    position: fixed;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: radial-gradient(
        circle at 30% 20%, 
        rgba(212, 175, 55, 0.04) 0%, 
        transparent 50%
    ),
    radial-gradient(
        circle at 70% 80%, 
        rgba(196, 138, 0, 0.03) 0%, 
        transparent 50%
    );
    pointer-events: none;
    z-index: 0;
    animation: ambientMove 25s ease-in-out infinite;
}

@keyframes ambientMove {
    0%, 100% { transform: translate(0, 0) rotate(0deg); }
    50% { transform: translate(40px, 25px) rotate(3deg); }
}

.particles-bg {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 0;
    overflow: hidden;
}

.particle {
    position: absolute;
    width: 4px;
    height: 4px;
    background: var(--gold-primary);
    border-radius: 50%;
    opacity: 0.15;
    animation: float-particle 20s infinite ease-in-out;
}

.particle:nth-child(1) { left: 10%; animation-delay: 0s; animation-duration: 18s; }
.particle:nth-child(2) { left: 25%; animation-delay: 3s; animation-duration: 22s; }
.particle:nth-child(3) { left: 45%; animation-delay: 1s; animation-duration: 20s; }
.particle:nth-child(4) { left: 65%; animation-delay: 4s; animation-duration: 19s; }
.particle:nth-child(5) { left: 85%; animation-delay: 2s; animation-duration: 21s; }
.particle:nth-child(6) { left: 15%; animation-delay: 2.5s; animation-duration: 23s; }
.particle:nth-child(7) { left: 50%; animation-delay: 1.5s; animation-duration: 19s; }
.particle:nth-child(8) { left: 75%; animation-delay: 3.5s; animation-duration: 21s; }

@keyframes float-particle {
    0%, 100% {
        transform: translateY(100vh) translateX(0) scale(1);
        opacity: 0;
    }
    10% { opacity: 0.15; }
    90% { opacity: 0.15; }
    100% {
        transform: translateY(-100px) translateX(50px) scale(0.5);
        opacity: 0;
    }
}

/* ============================================
           MAIN SECTION
============================================ */
.candidates-section {
    padding: 120px 36px 80px;
    max-width: 1400px;
    margin: 0 auto;
    min-height: 100vh;
    background: linear-gradient(180deg, var(--cream) 0%, var(--white) 50%, var(--gray-50) 100%);
    position: relative;
    z-index: 1;
}

.candidates-section::before {
    content: '';
    position: absolute;
    inset: 0;
    background-image: 
        linear-gradient(30deg, transparent 48%, rgba(212, 175, 55, 0.015) 50%, transparent 52%),
        linear-gradient(90deg, transparent 48%, rgba(212, 175, 55, 0.015) 50%, transparent 52%);
    background-size: 60px 60px;
    animation: hexMove 25s linear infinite;
    pointer-events: none;
}

@keyframes hexMove {
    0% { background-position: 0 0; }
    100% { background-position: 60px 60px; }
}

/* ============================================
           HEADER & SEARCH
============================================ */
.candidates-header {
    text-align: center;
    margin-bottom: 70px;
    animation: fadeInUp 0.8s ease-out;
    position: relative;
    z-index: 2;
}

.page-badge {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    padding: 10px 24px;
    border-radius: 50px;
    font-size: 12px;
    font-weight: 700;
    color: var(--gold-dark);
    margin-bottom: 24px;
    box-shadow: 
        0 3px 10px rgba(0, 0, 0, 0.06),
        inset 0 1px 0 rgba(255, 255, 255, 0.8),
        0 0 0 1px rgba(212, 175, 55, 0.15);
    text-transform: uppercase;
    letter-spacing: 1.1px;
    position: relative;
    overflow: hidden;
}

.page-badge::before {
    content: '‚ú¶';
    color: var(--gold-primary);
    font-size: 16px;
    animation: sparkle 2s ease-in-out infinite;
}

@keyframes sparkle {
    0%, 100% { opacity: 1; transform: scale(1) rotate(0deg); }
    50% { opacity: 0.7; transform: scale(1.15) rotate(180deg); }
}

.candidates-title {
    font-family: 'Playfair Display', serif;
    font-size: 56px;
    font-weight: 900;
    color: var(--charcoal);
    margin-bottom: 20px;
    background: linear-gradient(135deg, var(--gold-darker) 0%, var(--gold-primary) 50%, var(--gold-dark) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    background-size: 200% auto;
    animation: gradientShift 4s ease infinite;
    letter-spacing: -1px;
    line-height: 1.1;
}

@keyframes gradientShift {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
}

.candidates-subtitle {
    font-size: 18px;
    color: var(--gray-medium);
    max-width: 700px;
    margin: 0 auto 40px;
    line-height: 1.75;
    font-weight: 500;
}

/* Search Form */
.search-form {
    max-width: 650px;
    margin: 0 auto 40px;
    position: relative;
    animation: fadeInUp 0.8s ease-out 0.2s backwards;
}

.search-wrapper {
    display: flex;
    gap: 12px;
    background: var(--white);
    padding: 8px;
    border-radius: 50px;
    box-shadow: var(--shadow-gold-md);
    transition: var(--transition-smooth);
    border: 2px solid transparent;
}

.search-wrapper:focus-within {
    box-shadow: var(--shadow-gold-lg);
    border-color: var(--gold-light);
    transform: translateY(-2px);
}

.search-input {
    flex: 1;
    border: none;
    outline: none;
    padding: 16px 28px;
    font-size: 16px;
    background: transparent;
    color: var(--charcoal);
    font-weight: 500;
}

.search-input::placeholder {
    color: var(--gray-medium);
    opacity: 0.8;
}

.search-btn {
    background: linear-gradient(135deg, var(--gold-dark) 0%, var(--gold-darker) 100%);
    color: var(--white);
    border: none;
    padding: 16px 40px;
    border-radius: 50px;
    font-weight: 700;
    font-size: 15px;
    cursor: pointer;
    transition: var(--transition-smooth);
    box-shadow: var(--shadow-gold-md);
    position: relative;
    overflow: hidden;
}

.search-btn::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 0;
    height: 0;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.2);
    transform: translate(-50%, -50%);
    transition: width 0.5s ease, height 0.5s ease;
}

.search-btn:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-gold-lg);
    background: linear-gradient(135deg, var(--gold-darker) 0%, #7A5F08 100%);
}

.search-btn:hover::before {
    width: 300px;
    height: 300px;
}

.search-btn:active {
    transform: translateY(0);
}

/* Results Info */
.results-info {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 16px;
    margin-bottom: 40px;
    padding: 0 8px;
    animation: fadeInUp 0.8s ease-out 0.3s backwards;
}

.results-count {
    font-size: 16px;
    color: var(--gray-warm);
    font-weight: 700;
    padding: 12px 24px;
    background: linear-gradient(135deg, var(--gold-pale) 0%, #FFF8E7 100%);
    border-radius: 25px;
    border: 2px solid var(--gold-light);
    box-shadow: var(--shadow-sm);
}

.search-query {
    font-size: 15px;
    color: var(--white);
    background: linear-gradient(135deg, var(--gold-dark) 0%, var(--gold-darker) 100%);
    padding: 12px 28px;
    border-radius: 25px;
    font-weight: 700;
    box-shadow: var(--shadow-gold-sm);
}

.search-query strong {
    color: var(--white);
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
}

/* Filter & Sort Bar */
.filter-sort-bar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 16px;
    margin-bottom: 40px;
    padding: 20px 24px;
    background: rgba(255, 255, 255, 0.6);
    backdrop-filter: blur(10px);
    border-radius: 20px;
    border: 1px solid rgba(212, 175, 55, 0.1);
    animation: fadeInUp 0.8s ease-out 0.4s backwards;
}

.filter-group {
    display: flex;
    gap: 12px;
    align-items: center;
    flex-wrap: wrap;
}

.filter-label {
    font-size: 14px;
    font-weight: 600;
    color: var(--gray-warm);
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

.filter-btn {
    padding: 8px 18px;
    border: 2px solid var(--gray-300);
    background: var(--white);
    color: var(--gray-600);
    border-radius: 25px;
    font-size: 13px;
    font-weight: 600;
    cursor: pointer;
    transition: var(--transition-fast);
}

.filter-btn:hover,
.filter-btn.active {
    background: linear-gradient(135deg, var(--gold-dark) 0%, var(--gold-darker) 100%);
    border-color: var(--gold-dark);
    color: var(--white);
    transform: translateY(-2px);
    box-shadow: var(--shadow-gold-sm);
}

.sort-select {
    padding: 10px 16px;
    border: 2px solid var(--gray-300);
    background: var(--white);
    color: var(--gray-700);
    border-radius: 12px;
    font-size: 14px;
    font-weight: 600;
    cursor: pointer;
    transition: var(--transition-fast);
    outline: none;
}

.sort-select:focus {
    border-color: var(--gold-dark);
    box-shadow: 0 0 0 3px rgba(212, 175, 55, 0.1);
}

/* ============================================
           CANDIDATES GRID
============================================ */
.candidates-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 36px;
    margin-bottom: 60px;
}

.candidate-card {
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    border-radius: 28px;
    overflow: hidden;
    box-shadow: 
        var(--shadow-lg),
        0 0 0 1px rgba(212, 175, 55, 0.08);
    transition: var(--transition-smooth);
    position: relative;
    animation: fadeInUp 0.6s ease-out backwards;
    display: flex;
    flex-direction: column;
}

.candidate-card::before {
    content: '';
    position: absolute;
    inset: -2px;
    border-radius: 28px;
    background: linear-gradient(
        45deg,
        var(--gold-primary),
        var(--gold-light),
        var(--gold-primary)
    );
    background-size: 300% 300%;
    opacity: 0;
    z-index: -1;
    animation: borderGlow 3s ease infinite;
    transition: opacity 0.4s ease;
}

@keyframes borderGlow {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
}

.candidate-card:hover::before {
    opacity: 1;
}

.candidate-card:hover {
    transform: translateY(-12px) scale(1.01);
    box-shadow: 
        0 25px 60px rgba(0, 0, 0, 0.14),
        0 0 35px rgba(212, 175, 55, 0.25);
}

/* Stagger animation */
.candidate-card:nth-child(1) { animation-delay: 0.1s; }
.candidate-card:nth-child(2) { animation-delay: 0.15s; }
.candidate-card:nth-child(3) { animation-delay: 0.2s; }
.candidate-card:nth-child(4) { animation-delay: 0.25s; }
.candidate-card:nth-child(5) { animation-delay: 0.3s; }
.candidate-card:nth-child(6) { animation-delay: 0.35s; }
.candidate-card:nth-child(n+7) { animation-delay: 0.4s; }

/* Card Image */
.card-image-wrapper {
    position: relative;
    width: 100%;
    height: 300px;
    overflow: hidden;
    background: linear-gradient(135deg, var(--gold-pale) 0%, var(--cream) 100%);
}

.card-image-wrapper::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 140px;
    background: linear-gradient(to top, rgba(44, 44, 44, 0.8) 0%, transparent 100%);
    opacity: 0;
    transition: var(--transition-smooth);
    z-index: 1;
}

.candidate-card:hover .card-image-wrapper::after {
    opacity: 1;
}

.card-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.7s cubic-bezier(0.4, 0, 0.2, 1);
}

.candidate-card:hover .card-image {
    transform: scale(1.12);
}

.card-category {
    position: absolute;
    top: 20px;
    right: 20px;
    background: linear-gradient(135deg, var(--gold-dark) 0%, var(--gold-darker) 100%);
    color: var(--white);
    padding: 10px 20px;
    border-radius: 25px;
    font-size: 12px;
    font-weight: 800;
    text-transform: uppercase;
    letter-spacing: 1px;
    box-shadow: var(--shadow-gold-md);
    backdrop-filter: blur(10px);
    border: 2px solid rgba(255, 255, 255, 0.2);
    z-index: 2;
    transition: var(--transition-fast);
}

.candidate-card:hover .card-category {
    transform: translateY(-2px);
    box-shadow: var(--shadow-gold-lg);
}

/* Vote Badge */
.vote-count-badge {
    position: absolute;
    bottom: 20px;
    left: 20px;
    display: inline-flex;
    align-items: center;
    gap: 6px;
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    color: var(--gold-darker);
    padding: 8px 16px;
    border-radius: 25px;
    font-size: 12px;
    font-weight: 700;
    box-shadow: var(--shadow-md);
    z-index: 2;
    opacity: 0;
    transform: translateY(10px);
    transition: var(--transition-smooth);
}

.candidate-card:hover .vote-count-badge {
    opacity: 1;
    transform: translateY(0);
}

.vote-count-badge::before {
    content: 'üó≥Ô∏è';
    font-size: 14px;
}

/* Card Content */
.card-content {
    padding: 32px;
    flex: 1;
    display: flex;
    flex-direction: column;
    background: var(--white);
}

.card-name {
    font-family: 'Playfair Display', serif;
    font-size: 26px;
    font-weight: 800;
    color: var(--charcoal);
    margin-bottom: 14px;
    line-height: 1.3;
    background: linear-gradient(135deg, var(--charcoal) 0%, var(--slate) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}

.card-description {
    color: var(--gray-medium);
    font-size: 15px;
    line-height: 1.7;
    margin-bottom: 24px;
    flex: 1;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
    font-weight: 500;
}

/* Card Actions */
.card-actions {
    display: flex;
    gap: 12px;
    padding-top: 20px;
    border-top: 2px solid var(--gold-pale);
}

.btn-ghost {
    flex: 1;
    padding: 14px 20px;
    border: 2px solid var(--charcoal);
    background: transparent;
    color: var(--charcoal);
    border-radius: 50px;
    font-weight: 700;
    font-size: 15px;
    text-decoration: none;
    text-align: center;
    transition: var(--transition-smooth);
    cursor: pointer;
    position: relative;
    overflow: hidden;
}

.btn-ghost::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: var(--charcoal);
    transition: left 0.4s ease;
    z-index: -1;
}

.btn-ghost:hover {
    color: var(--white);
    border-color: var(--charcoal);
    transform: translateY(-2px);
    box-shadow: var(--shadow-dark);
}

.btn-ghost:hover::before {
    left: 0;
}

.btn-primary {
    flex: 1;
    padding: 14px 20px;
    border: none;
    background: linear-gradient(135deg, var(--gold-dark) 0%, var(--gold-darker) 100%);
    color: var(--white);
    border-radius: 50px;
    font-weight: 800;
    font-size: 15px;
    text-decoration: none;
    text-align: center;
    transition: var(--transition-smooth);
    cursor: pointer;
    box-shadow: var(--shadow-gold-md);
    position: relative;
    overflow: hidden;
}

.btn-primary::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 0;
    height: 0;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.25);
    transform: translate(-50%, -50%);
    transition: width 0.5s ease, height 0.5s ease;
}

.btn-primary:hover {
    transform: translateY(-3px);
    box-shadow: var(--shadow-gold-lg);
    background: linear-gradient(135deg, var(--gold-darker) 0%, #7A5F08 100%);
}

.btn-primary:hover::before {
    width: 300px;
    height: 300px;
}

/* ============================================
           VOTE MODAL (From Homepage)
============================================ */
.modal-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.75);
    backdrop-filter: blur(8px);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 9999;
    opacity: 0;
    visibility: hidden;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    padding: 20px;
}

.modal-overlay.active {
    opacity: 1;
    visibility: visible;
}

body.modal-open {
    overflow: hidden;
}

.modal-container {
    background: var(--white);
    border-radius: 32px;
    max-width: 600px;
    width: 100%;
    max-height: 90vh;
    overflow-y: auto;
    position: relative;
    box-shadow: 
        0 35px 80px rgba(0, 0, 0, 0.3),
        0 0 0 1px rgba(212, 175, 55, 0.1),
        inset 0 1px 0 rgba(255, 255, 255, 0.9);
    transform: scale(0.9) translateY(30px);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
}

.modal-overlay.active .modal-container {
    transform: scale(1) translateY(0);
}

.modal-header {
    background: linear-gradient(135deg, #0f1419 0%, #1a1f2e 100%);
    padding: 48px 40px;
    position: relative;
    overflow: hidden;
    border-radius: 32px 32px 0 0;
}

.modal-header::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(
        90deg, 
        var(--gold-primary) 0%, 
        var(--gold-light) 50%,
        var(--gold-primary) 100%
    );
    background-size: 200% auto;
    animation: gradientMove 3s linear infinite;
}

@keyframes gradientMove {
    0% { background-position: 0% 50%; }
    100% { background-position: 200% 50%; }
}

.modal-header::after {
    content: '';
    position: absolute;
    inset: 0;
    background: 
        radial-gradient(circle at 20% 30%, rgba(212, 175, 55, 0.08) 0%, transparent 50%),
        radial-gradient(circle at 80% 70%, rgba(196, 138, 0, 0.06) 0%, transparent 50%);
}

.modal-close {
    position: absolute;
    top: 20px;
    right: 20px;
    width: 40px;
    height: 40px;
    border: none;
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    border-radius: 50%;
    color: var(--white);
    font-size: 24px;
    cursor: pointer;
    transition: var(--transition-smooth);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 10;
}

.modal-close:hover {
    background: rgba(255, 255, 255, 0.2);
    transform: rotate(90deg);
}

.modal-icon {
    width: 80px;
    height: 80px;
    margin: 0 auto 20px;
    background: linear-gradient(135deg, var(--gold-primary) 0%, var(--gold-light) 100%);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 40px;
    box-shadow: 
        0 12px 30px rgba(212, 175, 55, 0.4),
        inset 0 3px 6px rgba(255, 255, 255, 0.4);
    position: relative;
    animation: pulse 2s ease-in-out infinite;
}

@keyframes pulse {
    0%, 100% { 
        transform: scale(1); 
        box-shadow: 0 12px 30px rgba(212, 175, 55, 0.4);
    }
    50% { 
        transform: scale(1.06); 
        box-shadow: 0 18px 40px rgba(212, 175, 55, 0.5);
    }
}

.modal-icon::before {
    content: '';
    position: absolute;
    top: 15%;
    left: 15%;
    width: 35%;
    height: 35%;
    background: radial-gradient(
        circle,
        rgba(255, 255, 255, 0.6) 0%,
        transparent 70%
    );
    border-radius: 50%;
