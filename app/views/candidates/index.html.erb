<script>
    // ============================================
    // VOTE MODAL FUNCTIONALITY
    // ============================================
    const modal = document.getElementById('voteModal');
    const modalClose = document.getElementById('modalClose');
    const cancelBtn = document.getElementById('cancelBtn');
    const closeSuccessBtn = document.getElementById('closeSuccessBtn');
    const voteForm = document.getElementById('voteForm');
    const successState = document.getElementById('successState');
    const modalCandidateName = document.getElementById('modalCandidateName');
    const votingForm = document.getElementById('votingForm');
    const candidateIdField = document.getElementById('candidateIdField');

    // Open modal when vote button is clicked
    document.querySelectorAll('.btn-vote').forEach(btn => {
        btn.addEventListener('click', function() {
            const candidateName = this.getAttribute('data-candidate-name');
            const candidateId = this.getAttribute('data-candidate-id');
            
            modalCandidateName.textContent = candidateName;
            candidateIdField.value = candidateId;
            openModal();
        });
    });

    function openModal() {
        modal.classList.add('active');
        document.body.classList.add('modal-open');
    }

    function closeModal() {
        modal.classList.remove('active');
        document.body.classList.remove('modal-open');
        
        setTimeout(() => {
            resetModal();
        }, 400);
    }

    function resetModal() {
        voteForm.style.display = 'block';
        successState.style.display = 'none';
        if (votingForm) votingForm.reset();
    }

    // Close modal events
    modalClose.addEventListener('click', closeModal);
    cancelBtn.addEventListener('click', closeModal);
    if (closeSuccessBtn) {
        closeSuccessBtn.addEventListener('click', closeModal);
    }

    // Close on overlay click
    modal.addEventListener('click', function(e) {
        if (e.target === modal) {
            closeModal();
        }
    });

    // Close on Escape key
    document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape' && modal.classList.contains('active')) {
            closeModal();
        }
    });

    // ============================================
    // FILTER FUNCTIONALITY
    // ============================================
    const filterBtns = document.querySelectorAll('.filter-btn');
    const candidateCards = document.querySelectorAll('.candidate-card');

    filterBtns.forEach(btn => {
        btn.addEventListener('click', function() {
            // Remove active class from all buttons
            filterBtns.forEach(b => b.classList.remove('active'));
            // Add active class to clicked button
            this.classList.add('active');

            const filter = this.getAttribute('data-filter');

            candidateCards.forEach(card => {
                const category = card.querySelector('.card-category');
                const categoryText = category ? category.textContent.toLowerCase() : '';

                if (filter === 'all' || categoryText.includes(filter.toLowerCase())) {
                    card.style.display = 'flex';
                    card.style.animation = 'fadeInUp 0.6s ease-out';
                } else {
                    card.style.display = 'none';
                }
            });
        });
    });

    // ============================================
    // SORT FUNCTIONALITY
    // ============================================
    const sortSelect = document.getElementById('sortSelect');
    const candidatesGrid = document.querySelector('.candidates-grid');

    if (sortSelect && candidatesGrid) {
        sortSelect.addEventListener('change', function() {
            const sortValue = this.value;
            const cardsArray = Array.from(candidateCards);

            cardsArray.sort((a, b) => {
                if (sortValue === 'name') {
                    const nameA = a.querySelector('.card-name').textContent.toLowerCase();
                    const nameB = b.querySelector('.card-name').textContent.toLowerCase();
                    return nameA.localeCompare(nameB);
                } else if (sortValue === 'popular') {
                    const votesA = parseInt(a.querySelector('.vote-count-badge')?.textContent || '0');
                    const votesB = parseInt(b.querySelector('.vote-count-badge')?.textContent || '0');
                    return votesB - votesA;
                }
                // Default: recent (no change needed as they're already in order)
                return 0;
            });

            // Clear and re-append sorted cards
            candidatesGrid.innerHTML = '';
            cardsArray.forEach(card => {
                candidatesGrid.appendChild(card);
            });
        });
    }

    // ============================================
    // SCROLL ANIMATIONS
    // ============================================
    const observerOptions = {
        threshold: 0.1,
        rootMargin: '0px 0px -50px 0px'
    };

    const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                entry.target.style.opacity = '1';
                entry.target.style.transform = 'translateY(0)';
            }
        });
    }, observerOptions);

    candidateCards.forEach(card => {
        card.style.opacity = '0';
        card.style.transform = 'translateY(30px)';
        observer.observe(card);
    });

    // ============================================
    // FORM SUBMISSION HANDLING
    // ============================================
    if (votingForm) {
        votingForm.addEventListener('submit', function(e) {
            // Show loading state on submit button
            const submitBtn = this.querySelector('[type="submit"]');
            if (submitBtn) {
                const originalText = submitBtn.textContent;
                submitBtn.textContent = 'Traitement en cours...';
                submitBtn.disabled = true;

                // Re-enable after a delay if submission fails
                setTimeout(() => {
                    if (submitBtn.disabled) {
                        submitBtn.textContent = originalText;
                        submitBtn.disabled = false;
                    }
                }, 5000);
            }
        });
    }

    // ============================================
    // SMOOTH SCROLL FOR ANCHOR LINKS
    // ============================================
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
        anchor.addEventListener('click', function (e) {
            const href = this.getAttribute('href');
            if (href !== "#" && href.length > 1) {
                e.preventDefault();
                const target = document.querySelector(href);
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            }
        });
    });
</script>
