<div class="admin-headerr">
  <h1><%= @video.title %></h1>
  <div class="actions">
    <%= link_to 'Modifier', edit_admin_video_path(@video), class: 'btn btn-primary' %>
    <%= link_to 'Retour', admin_videos_path, class: 'btn btn-secondary' %>
  </div>
</div>

<div class="video-detail">
  <div class="video-player-container">
    <% if @video.url.present? %>
      <% m = @video.url.match(/youtu\.be\/([^\?&\s]+)/) || @video.url.match(/[\?&]v=([^&\s]+)/) || @video.url.match(/embed\/([^\?&\s]+)/)
         id = m && m[1] %>
      <% if id %>
        <div class="video-embed">
          <iframe 
            width="100%" 
            height="280" 
            src="https://www.youtube.com/embed/<%= id %>?rel=0" 
            frameborder="0" 
            allowfullscreen
            class="video-iframe">
          </iframe>
        </div>
      <% else %>
        <div class="video-unavailable">
          <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
            <polygon points="23 7 16 12 23 17 23 7"></polygon>
            <rect x="1" y="5" width="15" height="14" rx="2" ry="2"></rect>
          </svg>
          <p>Aperçu non disponible</p>
          <%= link_to 'Voir la vidéo', @video.url, target: :_blank, class: 'video-external-link' %>
        </div>
      <% end %>
    <% end %>

    <% if @video.thumbnail.attached? %>
      <div class="thumbnail-section">
        <h4 class="subsection-title">Miniature</h4>
        <%= image_tag url_for(@video.thumbnail), alt: 'Miniature', class: 'thumbnail-image' %>
      </div>
    <% end %>
  </div>

  <div class="video-info">
    <div class="info-section">
      <div class="info-row">
        <span class="info-label">Candidat</span>
        <% if @video.candidate %>
          <%= link_to @video.candidate.name, admin_candidate_path(@video.candidate), class: 'candidate-link' %>
        <% else %>
          <span class="info-value-empty">Non attribué</span>
        <% end %>
      </div>

      <div class="info-row">
        <span class="info-label">URL de la vidéo</span>
        <div class="url-container">
          <%= link_to @video.url, @video.url, target: :_blank, rel: 'noopener', class: 'url-link' %>
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path>
            <polyline points="15 3 21 3 21 9"></polyline>
            <line x1="10" y1="14" x2="21" y2="3"></line>
          </svg>
        </div>
      </div>
    </div>

    <div class="info-section">
      <h3 class="section-title">Description</h3>
      <% if @video.description.present? %>
        <p class="description-text"><%= simple_format(@video.description) %></p>
      <% else %>
        <p class="description-empty">Aucune description disponible</p>
      <% end %>
    </div>
  </div>
</div>

