<%= form_with model: [:admin, @video], local: true, html: { multipart: true, class: 'video-form' } do |f| %>
  <% if @video.errors.any? %>
    <div class="errors-container">
      <h3><%= pluralize(@video.errors.count, "erreur") %> empêchent l'enregistrement :</h3>
      <ul class="errors-list">
        <% @video.errors.full_messages.each do |m| %>
          <li><%= m %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-grid">
    <div class="field">
      <%= f.label :title, 'Titre', class: 'field-label' %>
      <%= f.text_field :title, class: 'field-input', placeholder: 'Entrez le titre de la vidéo' %>
    </div>

    <div class="field">
      <%= f.label :candidate_id, 'Candidat', class: 'field-label' %>
      <%= f.collection_select :candidate_id, Candidate.order(:name), :id, :name, 
          { prompt: 'Choisissez un candidat' }, 
          { class: 'field-input field-select' } %>
    </div>

    <div class="field field-full">
      <%= f.label :url, 'URL vidéo', class: 'field-label' %>
      <%= f.url_field :url, class: 'field-input', placeholder: 'https://...' %>
    </div>

    <div class="field field-full">
      <%= f.label :description, 'Description', class: 'field-label' %>
      <%= f.text_area :description, rows: 5, class: 'field-input field-textarea', placeholder: 'Décrivez la vidéo...' %>
    </div>

    <div class="field field-full">
      <%= f.label :thumbnail, 'Miniature (image)', class: 'field-label' %>
      
      <div class="thumbnail-upload">
        <%= f.file_field :thumbnail, class: 'field-file', accept: 'image/*' %>
        
        <% if @video.thumbnail.attached? %>
          <div class="thumbnail-preview">
            <p class="thumbnail-label">Image actuelle :</p>
            <%= image_tag url_for(@video.thumbnail), 
                alt: 'Miniature actuelle', 
                class: 'thumbnail-image' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit 'Enregistrer', class: 'btn btn-primary' %>
    <%= link_to 'Annuler', admin_videos_path, class: 'btn btn-secondary' %>
  </div>
<% end %>

<style>
  .video-form {
    max-width: 800px;
    margin: 0 auto;
  }

  .errors-container {
    background: #fff3cd;
    border: 2px solid #c29600;
    border-radius: 8px;
    padding: 20px;
    margin-bottom: 24px;
  }

  .errors-container h3 {
    color: #856404;
    font-size: 16px;
    font-weight: 600;
    margin: 0 0 12px 0;
  }

  .errors-list {
    margin: 0;
    padding-left: 20px;
  }

  .errors-list li {
    color: #856404;
    margin-bottom: 6px;
  }

  .form-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 20px;
  }

  .field {
    display: flex;
    flex-direction: column;
  }

  .field-full {
    grid-column: 1 / -1;
  }

  .field-label {
    font-weight: 600;
    color: #2c3e50;
    margin-bottom: 8px;
    font-size: 14px;
  }

  .field-input {
    padding: 12px 16px;
    border: 2px solid #e0e0e0;
    border-radius: 6px;
    font-size: 15px;
    transition: all 0.2s ease;
    font-family: inherit;
  }

  .field-input:focus {
    outline: none;
    border-color: #c29600;
    box-shadow: 0 0 0 3px rgba(194, 150, 0, 0.1);
  }

  .field-select {
    cursor: pointer;
    background-color: white;
  }

  .field-textarea {
    resize: vertical;
    min-height: 120px;
  }

  .field-file {
    padding: 10px;
    border: 2px dashed #c29600;
    border-radius: 6px;
    background: #fffbf0;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .field-file:hover {
    background: #fff8e1;
    border-color: #a67c00;
  }

  .thumbnail-upload {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .thumbnail-preview {
    padding: 16px;
    background: #f8f9fa;
    border-radius: 6px;
    border: 1px solid #e0e0e0;
  }

  .thumbnail-label {
    font-size: 13px;
    color: #6c757d;
    margin: 0 0 12px 0;
    font-weight: 500;
  }

  .thumbnail-image {
    max-width: 200px;
    height: auto;
    border-radius: 4px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    display: block;
  }

  .form-actions {
    display: flex;
    gap: 12px;
    margin-top: 32px;
    padding-top: 24px;
    border-top: 1px solid #e0e0e0;
  }

  .btn {
    padding: 12px 24px;
    border: none;
    border-radius: 6px;
    font-size: 15px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.2s ease;
    text-decoration: none;
    display: inline-block;
  }

  .btn-primary {
    background: #c29600;
    color: white;
  }

  .btn-primary:hover {
    background: #a67c00;
    transform: translateY(-1px);
    box-shadow: 0 4px 12px rgba(194, 150, 0, 0.3);
  }

  .btn-secondary {
    background: #6c757d;
    color: white;
  }

  .btn-secondary:hover {
    background: #5a6268;
  }

  @media (max-width: 768px) {
    .form-grid {
      grid-template-columns: 1fr;
    }
    
    .field-full {
      grid-column: 1;
    }
  }
</style>