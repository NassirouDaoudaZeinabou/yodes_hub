<script>
document.addEventListener('DOMContentLoaded', function () {

  // ── Count display ──
  function updateCounts() {
    const rows = document.querySelectorAll('.user-row');
    const admins = document.querySelectorAll('.user-row[data-role="admin"]');
    const users  = document.querySelectorAll('.user-row[data-role="user"]');
    
    const el = id => document.getElementById(id);
    if (el('total-count'))  el('total-count').textContent  = rows.length;
    if (el('count-all'))    el('count-all').textContent    = rows.length;
    if (el('count-admin'))  el('count-admin').textContent  = admins.length;
    if (el('count-user'))   el('count-user').textContent   = users.length;
  }
  updateCounts();

  // ── Search + filter logic ──
  let activeFilter = 'all';
  
  function filterAll() {
    const q = (document.getElementById('searchInput')?.value || '').toLowerCase().trim();
    let visibleCount = 0;

    document.querySelectorAll('.user-row').forEach(row => {
      const email = (row.dataset.email || '').toLowerCase();
      const role  = (row.dataset.role  || '').toLowerCase();
      const matchQ = !q || email.includes(q) || role.includes(q);
      const matchF = activeFilter === 'all' || role === activeFilter;
      row.style.display = (matchQ && matchF) ? '' : 'none';
      if (matchQ && matchF) visibleCount++;
    });

    // No results row
    const tbody = document.getElementById('usersTableBody');
    let noRow = tbody.querySelector('.no-results-row');
    if (!visibleCount) {
      if (!noRow) {
        noRow = document.createElement('tr');
        noRow.className = 'no-results-row';
        noRow.innerHTML = '<td colspan="5">Aucun résultat pour cette recherche.</td>';
        tbody.appendChild(noRow);
      }
      noRow.style.display = '';
    } else if (noRow) {
      noRow.style.display = 'none';
    }

    if (document.getElementById('total-count'))
      document.getElementById('total-count').textContent = visibleCount;
  }

  const searchInput = document.getElementById('searchInput');
  if (searchInput) {
    searchInput.addEventListener('input', filterAll);

    // ⌘K / Ctrl+K shortcut
    document.addEventListener('keydown', e => {
      if ((e.metaKey || e.ctrlKey) && e.key === 'k') {
        e.preventDefault();
        searchInput.focus();
        searchInput.select();
      }
      if (e.key === 'Escape' && document.activeElement === searchInput) {
        searchInput.blur();
        searchInput.value = '';
        filterAll();
      }
    });
  }

  document.querySelectorAll('.filter-tab').forEach(btn => {
    btn.addEventListener('click', function () {
      document.querySelectorAll('.filter-tab').forEach(b => b.classList.remove('active'));
      this.classList.add('active');
      activeFilter = this.dataset.filter || 'all';
      filterAll();
    });
  });

  // ── View toggle ──
  const tableView = document.getElementById('tableView');
  const cardsView = document.getElementById('cardsView');
  const viewTable = document.getElementById('viewTable');
  const viewCards = document.getElementById('viewCards');

  function buildCards() {
    cardsView.innerHTML = '';
    document.querySelectorAll('.user-row').forEach((row, i) => {
      const email   = row.dataset.email || '';
      const role    = row.dataset.role  || 'user';
      const initial = email[0]?.toUpperCase() || '?';
      const avatar  = row.querySelector('.avatar');
      const bgStyle = avatar ? avatar.style.background : 'linear-gradient(135deg, #7A5800, #D4A017)';
      const dateEl  = row.querySelector('.date-text');
      const dateStr = dateEl ? dateEl.textContent : '';

      const card = document.createElement('div');
      card.className = 'user-card';
      card.dataset.email = email;
      card.dataset.role  = role;
      card.style.animationDelay = (i * 0.06) + 's';
      card.innerHTML = `
        <div class="card-top">
          <div class="avatar-lg" style="background:${bgStyle}">${initial}</div>
          <span class="role-badge role-${role}">${role === 'admin' ? '★ Admin' : 'Membre'}</span>
        </div>
        <div class="card-body">
          <p class="card-email">${email}</p>
          <p class="card-date">Inscrit le ${dateStr}</p>
        </div>
        <div class="card-actions">
          <button class="action-btn action-view" title="Voir"><svg viewBox="0 0 24 24" fill="none"><path d="M1 12C1 12 5 4 12 4C19 4 23 12 23 12C23 12 19 20 12 20C5 20 1 12 1 12Z" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round"/><circle cx="12" cy="12" r="3" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round"/></svg></button>
          <button class="action-btn action-edit" title="Modifier"><svg viewBox="0 0 24 24" fill="none"><path d="M11 4H4a2 2 0 00-2 2v14a2 2 0 002 2h14a2 2 0 002-2v-7" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round"/><path d="M18.5 2.5a2.12 2.12 0 013 3L12 15l-4 1 1-4 9.5-9.5z" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round"/></svg></button>
          <button class="action-btn action-delete" title="Supprimer"><svg viewBox="0 0 24 24" fill="none"><polyline points="3 6 5 6 21 6" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round"/><path d="M19 6L18.1 20.1A2 2 0 0116.1 22H7.9A2 2 0 015.9 20.1L5 6" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round"/></svg></button>
        </div>`;
      cardsView.appendChild(card);
    });
  }

  if (viewTable && viewCards) {
    viewTable.addEventListener('click', () => {
      tableView.style.display = ''; cardsView.style.display = 'none';
      viewTable.classList.add('active'); viewCards.classList.remove('active');
    });
    viewCards.addEventListener('click', () => {
      buildCards();
      tableView.style.display = 'none'; cardsView.style.display = 'grid';
      viewCards.classList.add('active'); viewTable.classList.remove('active');
    });
  }

  // ── Select all / Bulk bar ──
  const selectAll = document.getElementById('selectAll');
  const bulkBar   = document.getElementById('bulkBar');
  const bulkCount = document.getElementById('bulkCount');

  function refreshBulk() {
    const checked = document.querySelectorAll('.row-check:checked').length;
    if (bulkCount) bulkCount.textContent = checked;
    if (bulkBar)   bulkBar.classList.toggle('visible', checked > 0);
    document.querySelectorAll('.user-row').forEach(row => {
      const cb = row.querySelector('.row-check');
      row.classList.toggle('selected', !!(cb && cb.checked));
    });
  }

  if (selectAll) {
    selectAll.addEventListener('change', function () {
      document.querySelectorAll('.row-check').forEach(cb => cb.checked = this.checked);
      refreshBulk();
    });
  }

  document.addEventListener('change', e => {
    if (e.target.classList.contains('row-check')) refreshBulk();
  });

  // ── Column sorting ──
  document.querySelectorAll('th.sortable').forEach(th => {
    th.addEventListener('click', function () {
      const col = this.dataset.col;
      const tbody = document.getElementById('usersTableBody');
      if (!tbody) return;

      const asc = this.dataset.order !== 'asc';
      document.querySelectorAll('th.sortable').forEach(t => delete t.dataset.order);
      this.dataset.order = asc ? 'asc' : 'desc';

      const rows = Array.from(tbody.querySelectorAll('.user-row'));
      rows.sort((a, b) => {
        let va = '', vb = '';
        if (col === 'email') { va = a.dataset.email || ''; vb = b.dataset.email || ''; }
        else if (col === 'role') { va = a.dataset.role || ''; vb = b.dataset.role || ''; }
        else if (col === 'created_at') {
          va = a.querySelector('.date-text')?.textContent || '';
          vb = b.querySelector('.date-text')?.textContent || '';
        }
        return asc ? va.localeCompare(vb) : vb.localeCompare(va);
      });
      rows.forEach(r => tbody.appendChild(r));
    });
  });

  // ── Row animation stagger ──
  document.querySelectorAll('.user-row').forEach((row, i) => {
    if (!row.style.animationDelay) row.style.animationDelay = (i * 0.05) + 's';
  });
});
