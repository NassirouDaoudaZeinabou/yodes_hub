<header class="admin-topbar">
  <div class="left">
    <button id="sidebarToggle" aria-controls="adminSidebar" aria-expanded="true" class="sidebar-toggle" title="Basculer la navigation">☰</button>
    <%= link_to 'Yodes Hub — Admin', admin_candidates_path, class: 'brand', style: 'margin-left:10px;font-weight:600;text-decoration:none;color:inherit' %>
  </div>

  

  <div class="right">
    <% if user_signed_in? %>
      <div class="user-menu">
        <span class="user-email"><%= current_user.email %></span>
        <%= link_to 'Se déconnecter', destroy_user_session_path, method: :delete, class: 'button' %>
      </div>
    <% else %>
      <%= link_to 'Se connecter', new_user_session_path, class: 'button' %>
    <% end %>
  </div>

  <style>
    .admin-topbar{display:flex;align-items:center;justify-content:space-between;padding:8px 12px;border-bottom:1px solid rgba(0,0,0,0.06);background:transparent}
    .admin-topbar .left{display:flex;align-items:center}
    .admin-topbar .center{flex:1;padding:0 12px}
    .admin-search-form{display:flex;align-items:center}
    .admin-search-form .input{width:100%;padding:8px 10px;border-radius:8px;border:1px solid #e6e6e6}
    .admin-search-form .search-btn{margin-left:8px;padding:8px 10px;border-radius:8px;border:0;background:#d4af37;color:#fff}
    .admin-topbar .right .user-email{margin-right:8px;color:#333}
  </style>
</header>
