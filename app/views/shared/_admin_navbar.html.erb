<header class="admin-topbar">
  <div class="left">
    <button id="sidebarToggle" aria-controls="adminSidebar" aria-expanded="true" class="sidebar-toggle" title="Basculer la navigation">☰</button>
    <%= link_to 'Yodes Hub — Admin', admin_candidates_path, class: 'brand', style: 'margin-left:10px;font-weight:600;text-decoration:none;color:inherit' %>
  </div>

  <div class="right">
    <% if user_signed_in? %>
      <div class="user-menu">
        <span class="user-email"><%= current_user.email %></span>
        <%= link_to 'Se déconnecter', destroy_user_session_path, method: :delete, class: 'button logout-btn' %>
      </div>
    <% else %>
      <%= link_to 'Se connecter', new_user_session_path, class: 'button login-btn' %>
    <% end %>
  </div>

  <style>
    .admin-topbar {
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 12px 20px;
      border-bottom: 2px solid #b8860b;
      background: linear-gradient(135deg, #fefefe 0%, #fafaf8 100%);
      box-shadow: 0 2px 8px rgba(184, 134, 11, 0.08);
    }
    
    .admin-topbar .left {
      display: flex;
      align-items: center;
      gap: 12px;
    }
    
    .sidebar-toggle {
      padding: 8px 12px;
      border: 1px solid #b8860b;
      border-radius: 8px;
      background: #fff;
      color: #b8860b;
      font-size: 18px;
      cursor: pointer;
      transition: all 0.2s ease;
    }
    
    .sidebar-toggle:hover {
      background: #b8860b;
      color: #fff;
    }
    
    .admin-topbar .brand {
      color: #8b6f0f !important;
      font-weight: 600 !important;
      font-size: 18px;
      transition: color 0.2s ease;
    }
    
    .admin-topbar .brand:hover {
      color: #b8860b !important;
    }
    
    .admin-topbar .right {
      display: flex;
      align-items: center;
    }
    
    .user-menu {
      display: flex;
      align-items: center;
      gap: 12px;
    }
    
    .admin-topbar .right .user-email {
      padding: 6px 12px;
      background: #fffef0;
      border: 1px solid #e6d88a;
      border-radius: 6px;
      color: #8b6f0f;
      font-size: 14px;
      font-weight: 500;
    }
    
    .admin-topbar .button {
      padding: 8px 16px;
      border-radius: 8px;
      border: 1px solid #b8860b;
      background: #b8860b;
      color: #fff;
      font-weight: 500;
      text-decoration: none;
      transition: all 0.2s ease;
      cursor: pointer;
    }
    
    .admin-topbar .button:hover {
      background: #8b6f0f;
      border-color: #8b6f0f;
      transform: translateY(-1px);
      box-shadow: 0 2px 6px rgba(184, 134, 11, 0.25);
    }
    
    .admin-topbar .login-btn {
      background: transparent;
      color: #b8860b;
    }
    
    .admin-topbar .login-btn:hover {
      background: #b8860b;
      color: #fff;
    }
  </style>
</header>